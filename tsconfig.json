{
	"compilerOptions": {
		"esModuleInterop": true,
		"moduleResolution": "nodenext",
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"module": "NodeNext",
		"outDir": "dist",
		"sourceMap": true,
		"declaration": true,
	},
}